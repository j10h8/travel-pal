<Window x:Class="TravelPal.UserDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelPal"
        mc:Ignorable="d"
        Title="UserDetailsWindow"
        Height="600" 
        MinHeight="600"
        MaxHeight="600"
        Width="1000"
        MinWidth="1000"
        MaxWidth="1000"
        Background="MintCream"
        FontFamily="Calibri"
        FontSize="20"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        
        <Label
            Grid.Column="1"
            Grid.Row="1"
            Content="- User details -"
            Grid.ColumnSpan="5"
            HorizontalContentAlignment="Center"
            FontFamily="Arial"
            FontSize="45"
            Foreground="MediumSlateBlue"/>
        <Label
            Grid.Column="1"
            Grid.Row="2"
            Content="Current"
            FontSize="30"
            Foreground="MediumSlateBlue"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Bottom"/>
        <Label
            Grid.Column="1"
            Grid.Row="6"
            Content="Update"
            FontSize="30"
            Foreground="MediumSlateBlue"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Bottom"/>
        <Label
            Grid.Column="1"
            Grid.Row="7"
            Content="User name:"
            Foreground="MediumSlateBlue"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Center"/>
        <Label
            Grid.Column="1"
            Grid.Row="3"
            Content="User name:"
            Foreground="MediumSlateBlue"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Center"/>
        <Label
            Name="lblCurrentName"
            Grid.Column="2"
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Width="380"
            Height="45"
            Content="User name"
            Foreground="MediumSlateBlue"
            HorizontalAlignment="left"
            BorderThickness="2"
            BorderBrush="MediumSlateBlue"
            VerticalContentAlignment="Center">
            <Label.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Label.Resources>
        </Label>
        <Label
            Grid.Column="1"
            Grid.Row="4"
            Content="Country:"
            Foreground="MediumSlateBlue"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Center"/>
        <Label
            Name="lblCurrentCountry"
            Grid.Column="2"
            Grid.Row="4"
            Grid.ColumnSpan="2"
                        Width="380"
            Height="45"
            Content="Country"
            Foreground="MediumSlateBlue"
            BorderBrush="MediumSlateBlue"
            BorderThickness="2"
            HorizontalAlignment="left"
            VerticalContentAlignment="Center">
            <Label.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Label.Resources>
        </Label>
            <Button
            Name="btnRemoveUser"
            Grid.Column="4"
            Grid.Row="4"
            Width="150"
            Content="Remove account"
            FontSize="18"
            Background="MediumSlateBlue"
            Foreground="MintCream"
            Margin="0 10 0 10"
            BorderThickness="0"
            Click="btnRemoveUser_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button
            Name="btnManageUserAccounts"
            Grid.Column="5"
            Grid.Row="4"
            Width="150"
            Content="User accounts"
            FontSize="18"
            Background="MediumSlateBlue"
            Foreground="MintCream"
            Margin="0 10 0 10"
            BorderThickness="0"
            Click="btnManageUserAccounts_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        <TextBox
            Name="txtUpdateUserName"
            Grid.Column="2"
            Grid.Row="7"
            Grid.ColumnSpan="2"
            Width="380"
            Height="45"
            Background="MintCream"
            Foreground="MediumSlateBlue"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            BorderBrush="MediumSlateBlue"
            BorderThickness="2"
            TextChanged="txtUpdateUserName_TextChanged">
            <TextBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Label
            Grid.Column="1"
            Grid.Row="8"
            Content="Country:"
            Foreground="MediumSlateBlue"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Center"/>
        <Border CornerRadius="5"
                Grid.Row="9"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                Width="380"
                Height="45"
                HorizontalAlignment="Left"
                BorderBrush="MediumSlateBlue"
                BorderThickness="2">
            <PasswordBox
            Name="pbUpdatePassword"
            Background="MintCream"
            Foreground="MediumSlateBlue"
            Width="380"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            BorderThickness="0"
            PasswordChanged="pbUpdatePassword_PasswordChanged"/>
        </Border>
        <Label
            Grid.Column="1"
            Grid.Row="10"
            Content="Confirm password:"
            Foreground="MediumSlateBlue"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Center"/>
        <Border CornerRadius="5"
                Grid.Row="10"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                Width="380"
                Height="45"
                HorizontalAlignment="Left"
                BorderBrush="MediumSlateBlue"
                BorderThickness="2">
            <PasswordBox
            Name="pbConfirmPassword"
            Background="MintCream"
            Foreground="MediumSlateBlue"
            VerticalAlignment="Center"
            Width="380"
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            BorderThickness="0"
            PasswordChanged="pbConfirmPassword_PasswordChanged"/>
        </Border>
        <Border CornerRadius="5"
                Grid.Row="8"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                Width="380"
                Height="45"
                HorizontalAlignment="Left"
                BorderBrush="MediumSlateBlue"
                BorderThickness="2">
            <ComboBox
            Name="cbUpdateCountry"
            Foreground="MediumSlateBlue"
            Width="380"
            HorizontalAlignment="Left"
            HorizontalContentAlignment="Left"
            VerticalAlignment="Center"
            VerticalContentAlignment="Center"/>
        </Border>
        <Label
            Grid.Column="1"
            Grid.Row="9"
            Content="New password:"
            Foreground="MediumSlateBlue"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Center"/>
        <Button
            Name="btnSaveUpdate"
            Grid.Column="4"
            Grid.Row="10"
            Width="150"
            Content="Save"
            FontSize="18"
            Background="MediumSlateBlue"
            Foreground="MintCream"
            Margin="0 10 0 10"
            BorderThickness="0"
            HorizontalAlignment="Center"
            Click="btnSaveUpdate_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button
            Name="btnCancelDetailsWindow"
            Grid.Column="5"
            Grid.Row="10"
            Width="150"
            Content="Cancel"
            FontSize="18"
            Background="MediumSlateBlue"
            Foreground="MintCream"
            Margin="10"
            BorderThickness="0"
            Click="btnCancelDetailsWindow_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
